<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostAppMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Image Source="icourier.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center"
                   />
            <Label
                Text="Courier Mail Service"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center" 
                HorizontalTextAlignment="Center"/>

            <Label
                Text="The couriers Package Tracker mobile app"
                FontSize="18"
                HorizontalOptions="Center"
                TextColor="Gray"
                HorizontalTextAlignment="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
