<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostAppMaui.ListEntryPage"
             Title="ListEntryPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Package"
                     Clicked="OnPackageAddedClicked" />
    </ContentPage.ToolbarItems>

    <StackLayout>
        <ListView x:Name="listView" Margin="20" ItemSelected="OnListViewItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding PackageTitle}" FontAttributes="Bold"/>
                            <Label Text="{Binding StatusAndAddress}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>